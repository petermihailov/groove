{
  "compilerOptions": {
    "strict": true,
    "target": "ES2021",
    "lib": ["DOM", "DOM.Iterable", "ES2021"],
    "outDir": "./dist",
    "module": "es6",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "sourceMap": true
  },
  "exclude": ["node_modules"],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.d.ts"
  ]
}
